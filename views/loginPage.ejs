<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .login-container {
            margin-top: 20px;
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        table {
            width: 100%;
            margin: 0 auto;
        }
        td {
            padding: 8px;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <% if (typeof loginResult !== 'undefined' && loginResult === 'fail') { %>
            <script> alert("Login failed"); </script>
        <% } %>

        <h1>로그인</h1>
        <form method="post">
            <table>
                <tr>
                    <td><label>아이디</label></td>
                    <td><input type="text" name="userID" required></td>
                </tr>
                <tr>
                    <td><label>비밀번호</label></td>
                    <td><input type="password" name="userPassword" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="로그인"></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
