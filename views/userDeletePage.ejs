<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Delete Page</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .delete-container {
            margin-top: 20px;
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        table {
            width: 100%;
            margin: 0 auto;
        }
        td {
            padding: 8px;
        }
        input[type="password"] {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

    <div class="delete-container">
        <h1>회원 탈퇴</h1>
        <form method="post" action="/userdelete">
            <table>
                <tr>
                    <td><label for="password">비밀번호</label></td>
                    <td><input type="password" id="password" name="password" required></td>
                </tr>
                <tr>
                    <td colspan="2"><button type="submit">탈퇴하기</button></td>
                </tr>
            </table>
        </form>
    </div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const status = urlParams.get('status');

        if (status === 'password_error') {
            alert('비밀번호 오류, 다시 입력해주세요');
        } else if (status === 'fail') {
            alert('회원 탈퇴 실패, 다시 시도해주세요');
        }
    </script>
</body>
</html>
